{
  "name": "Universal Template (Local)",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  
  // Features to add to the dev container
  "features": {
    "ghcr.io/joernstoehler/claude-code-devcontainer-features/claude-code:3": {},
    "ghcr.io/joernstoehler/claude-code-devcontainer-features/claude-code-common-cli-tools:3": {},
    "ghcr.io/joernstoehler/claude-code-devcontainer-features/claude-code-shared-templates-git-remote:3": {
      "templateUrl": "https://github.com/JoernStoehler/claude-code-shared-templates.git"
    },
    "ghcr.io/joernstoehler/claude-code-devcontainer-features/claude-code-telemetry:3": {},
    "ghcr.io/joernstoehler/claude-code-devcontainer-features/claude-code-env-loader:3": {}
  },

  // Install Python dependencies after container creation
  "postCreateCommand": "uv sync --frozen --all-extras --dev || uv sync --all-extras --dev",

  // Environment setup handled by features and postCreateCommand
  "remoteEnv": {
    "DEVCONTAINER": "true"
  },

  // VS Code extensions and settings
  "customizations": {
    "vscode": {
      "extensions": [
        // Core development
        "Anthropic.claude-code",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-websearchforcopilot",
        
        // Python (optional, for Python projects)
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        
        // TypeScript/JavaScript (optional, for TS/JS projects)
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        
        // Git and GitHub
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        
        // General productivity
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "mechatroner.rainbow-csv",
        "usernamehw.errorlens",
        "ms-vscode.vscode-loc-en"
      ],
      "settings": {}
    }
  }
}