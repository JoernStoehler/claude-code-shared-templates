{
  "name": "Seminar KI in der Mathematik (Local)",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  
  // Features to add to the dev container
  "features": {
    "ghcr.io/joernstoehler/claude-code-devcontainer-features/claude-code:5": {
      "enableTelemetry": true,
      "templateUrl": "https://github.com/JoernStoehler/claude-code-shared-templates.git"
    }
  },

  // Install UV and Python dependencies after container creation
  "postCreateCommand": ".devcontainer/setup-dependencies.sh",

  // Environment setup handled by features and postCreateCommand

  // VS Code extensions and settings
  "customizations": {
    "vscode": {
      "extensions": [
        // Core development
        "Anthropic.claude-code",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.vscode-websearchforcopilot",
        
        // Python (optional, for Python projects)
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        
        // Document authoring
        "quarto.quarto",
        
        // TypeScript/JavaScript (optional, for TS/JS projects)
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        
        // Git and GitHub
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        
        // General productivity
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml",
        "mechatroner.rainbow-csv",
        "usernamehw.errorlens",
        "ms-vscode.vscode-loc-en"
      ],
      "settings": {}
    }
  }
}